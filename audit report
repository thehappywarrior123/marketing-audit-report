    <script>
        function generateReport() {
            // Get form data
            const formData = {
                clientName: document.getElementById('clientName').value,
                companyName: document.getElementById('companyName').value,
                industry: document.getElementById('industry').value,
                monthlyRevenue: document.getElementById('monthlyRevenue').value,
                currentCRM: document.getElementById('currentCRM').value,
                monthlyAdSpend: document.getElementById('monthlyAdSpend').value,
                primaryGoal: document.getElementById('primaryGoal').value,
                biggestChallenge: document.getElementById('biggestChallenge').value,
                targetAudience: document.getElementById('targetAudience').value,
            };

            // Get manual processes
            const manualProcesses = [];
            document.querySelectorAll('input[name="manualProcesses"]:checked').forEach(cb => {
                manualProcesses.push(cb.nextElementSibling.textContent);
            });

            // Get content assets
            const contentAssets = {};
            document.querySelectorAll('input[name="contentAssets"]').forEach(cb => {
                contentAssets[cb.id] = cb.checked;
            });

            // Get current channels
            const currentChannels = [];
            document.querySelectorAll('input[name="currentChannels"]:checked').forEach(cb => {
                currentChannels.push(cb.nextElementSibling.textContent);
            });

            // Validate required fields
            if (!formData.clientName || !formData.companyName || !formData.industry) {
                alert('Please fill out all required fields (marked with *)');
                return;
            }

            // Generate report
            const report = generateAuditReport(formData, manualProcesses, contentAssets, currentChannels);
            document.getElementById('reportContent').innerHTML = report;
        }

        function generateAuditReport(data, manualProcesses, contentAssets, currentChannels) {
            const currentDate = new Date().toLocaleDateString();
            
            // Calculate scores and recommendations
            const automationScore = manualProcesses.length;
            const contentScore = Object.values(contentAssets).filter(v => v).length;
            const channelScore = currentChannels.length;
            
            // Generate industry-specific insights
            const industryInsights = getIndustryInsights(data.industry);
            const roiEstimate = calculateROIEstimate(data.monthlyRevenue, automationScore, contentScore);
            
            return `
                <div class="report-content">
                    <div style="text-align: center; margin-bottom: 30px;">
                        <h1 style="color: #2c3e50; font-size: 2rem;">üìä AI Marketing Audit Report</h1>
                        <div style="background: #ecf0f1; padding: 15px; border-radius: 10px; margin: 20px 0;">
                            <strong>Client:</strong> ${data.clientName} | 
                            <strong>Company:</strong> ${data.companyName} | 
                            <strong>Date:</strong> ${currentDate}<br>
                            <strong>Consultant:</strong> Joseph Nicotera, Atlas Virtual Media
                        </div>
                    </div>

                    <h2>üîç Executive Summary</h2>
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin: 15px 0;">
                        ${generateExecutiveSummary(data, automationScore, contentScore, channelScore, industryInsights)}
                    </div>

                    <div class="roi-highlight">
                        üí∞ ${roiEstimate}
                    </div>

                    <h2>‚öôÔ∏è Marketing Workflow Assessment</h2>
                    <h3><strong>Manual Processes Identified:</strong></h3>
                    <ul>
                        ${manualProcesses.length > 0 ? 
                            manualProcesses.map(process => `<li>${process}</li>`).join('') :
                            '<li style="color: #27ae60;">‚úÖ No major manual processes identified</li>'
                        }
                        ${manualProcesses.length === 0 ? '<li>Opportunity: Advanced AI integration for competitive advantage</li>' : ''}
                    </ul>

                    <h3><strong>Automation Recommendations:</strong></h3>
                    <ul>
                        ${generateAutomationRecommendations(manualProcesses, data.currentCRM)}
                    </ul>

                    <h3><strong>Suggested Tools:</strong></h3>
                    <ul>
                        <li><strong>CRM/Automation:</strong> ${data.currentCRM === 'None' || !data.currentCRM ? 'GoHighLevel (recommended), HubSpot, or Pipedrive' : 'Optimize current ' + data.currentCRM + ' setup'}</li>
                        <li><strong>Email Marketing:</strong> ConvertKit, Brevo, or integrate with existing CRM</li>
                        <li><strong>AI Tools:</strong> ChatGPT API integration, Zapier AI, Copy.ai for content</li>
                    </ul>

                    <h2>üìÑ Content Asset Review</h2>
                    <h3><strong>Existing Assets:</strong></h3>
                    <ul>
                        <li>Website: ${contentAssets.hasWebsite ? '<span class="status-indicator status-yes">‚úÖ Yes</span>' : '<span class="status-indicator status-no">‚ùå Missing</span>'}</li>
                        <li>Case Studies: ${contentAssets.hasCaseStudies ? '<span class="status-indicator status-yes">‚úÖ Yes</span>' : '<span class="status-indicator status-no">‚ùå Missing</span>'}</li>
                        <li>Pitch Decks: ${contentAssets.hasPitchDecks ? '<span class="status-indicator status-yes">‚úÖ Yes</span>' : '<span class="status-indicator status-no">‚ùå Missing</span>'}</li>
                        <li>Lead Magnets: ${contentAssets.hasLeadMagnets ? '<span class="status-indicator status-yes">‚úÖ Yes</span>' : '<span class="status-indicator status-no">‚ùå Missing</span>'}</li>
                        <li>Blog/Content: ${contentAssets.hasBlog ? '<span class="status-indicator status-yes">‚úÖ Yes</span>' : '<span class="status-indicator status-no">‚ùå Missing</span>'}</li>
                        <li>Testimonials: ${contentAssets.hasTestimonials ? '<span class="status-indicator status-yes">‚úÖ Yes</span>' : '<span class="status-indicator status-no">‚ùå Missing</span>'}</li>
                    </ul>

                    <h3><strong>Content Gaps & Recommendations:</strong></h3>
                    <ul>
                        ${generateContentRecommendations(contentAssets, data.industry, data.targetAudience)}
                    </ul>

                    <h2>üì∫ Media & Ad Opportunities</h2>
                    <h3><strong>Current Channels:</strong></h3>
                    <ul>
                        <li>Social Media: ${currentChannels.includes('Social Media Marketing') ? '<span class="status-indicator status-yes">‚úÖ Active</span>' : '<span class="status-indicator status-no">‚ùå Not Active</span>'}</li>
                        <li>Email Marketing: ${currentChannels.includes('Email Marketing') ? '<span class="status-indicator status-yes">‚úÖ Active</span>' : '<span class="status-indicator status-no">‚ùå Not Active</span>'}</li>
                        <li>PPC/Google Ads: ${currentChannels.includes('PPC/Google Ads') ? '<span class="status-indicator status-yes">‚úÖ Active</span>' : '<span class="status-indicator status-no">‚ùå Not Active</span>'}</li>
                        <li>OTT/CTV: <span class="status-indicator status-no">‚ùå Untapped Opportunity</span></li>
                        <li>DOOH: <span class="status-indicator status-no">‚ùå Untapped Opportunity</span></li>
                    </ul>

                    <h3><strong>High-Impact Opportunities:</strong></h3>
                    <ul>
                        ${generateMediaOpportunities(currentChannels, data.industry, data.monthlyAdSpend)}
                    </ul>

                    <h2>üß† AI Strategy Roadmap</h2>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin: 20px 0;">
                        <div style="border: 2px solid #3498db; border-radius: 10px; padding: 20px;">
                            <h3 style="color: #3498db; margin-bottom: 15px;">üìÖ Short-Term (Next 30 Days)</h3>
                            <ul>
                                ${generateShortTermRecommendations(manualProcesses, contentAssets)}
                            </ul>
                        </div>
                        <div style="border: 2px solid #f39c12; border-radius: 10px; padding: 20px;">
                            <h3 style="color: #f39c12; margin-bottom: 15px;">‚è≥ Mid-Term (30-90 Days)</h3>
                            <ul>
                                ${generateMidTermRecommendations(currentChannels, data.monthlyAdSpend)}
                            </ul>
                        </div>
                        <div style="border: 2px solid #27ae60; border-radius: 10px; padding: 20px;">
                            <h3 style="color: #27ae60; margin-bottom: 15px;">üöÄ Long-Term (90+ Days)</h3>
                            <ul>
                                <li>Full AI-powered marketing automation system</li>
                                <li>Predictive analytics for customer behavior</li>
                                <li>Omnichannel campaign orchestration</li>
                                <li>Advanced personalization at scale</li>
                            </ul>
                        </div>
                    </div>

                    <h2>üíº Recommended Services</h2>
                    <div class="services-grid">
                        ${generateServiceRecommendations(automationScore, contentScore, channelScore, data.monthlyRevenue)}
                    </div>

                    <h2>‚úÖ Next Steps & Investment</h2>
                    <div style="background: #e8f5e8; border: 2px solid #27ae60; border-radius: 10px; padding: 25px; margin: 20px 0;">
                        <h3 style="color: #27ae60; margin-bottom: 15px;">üéØ Priority Action Items:</h3>
                        <ol style="font-size: 1.1rem; line-height: 1.8;">
                            ${generatePriorityActions(manualProcesses, contentAssets, currentChannels)}
                        </ol>
                        
                        <div style="text-align: center; margin-top: 25px; padding: 20px; background: white; border-radius: 10px;">
                            <h3 style="color: #2c3e50;">üöÄ Ready to Transform Your Marketing?</h3>
                            <p style="font-size: 1.2rem; margin: 15px 0;">Let's prioritize your biggest ROI wins and get started.</p>
                            <p style="font-size: 1.1rem; color: #e74c3c; font-weight: 600;">üì© I can send a detailed proposal today!</p>
                        </div>
                    </div>

                    <button class="export-btn" onclick="exportReport()">üìÑ Export Report as PDF</button>
                </div>
            `;
        }

        function getIndustryInsights(industry) {
            const insights = {
                'Technology': 'AI and automation adoption rates are highest, focus on B2B lead generation',
                'Healthcare': 'Compliance-focused content and trust-building are critical',
                'Finance': 'Security, trust, and educational content drive conversions',
                'E-commerce': 'Omnichannel presence and personalization yield highest ROI',
                'Real Estate': 'Local SEO and visual content are conversion drivers',
                'Professional Services': 'Thought leadership and case studies build authority',
                'Default': 'Industry-specific optimization opportunities exist'
            };
            return insights[industry] || insights['Default'];
        }

        function calculateROIEstimate(revenue, automationScore, contentScore) {
            let baseROI = 15000; // Base monthly increase
            
            // Adjust based on current revenue
            if (revenue.includes('$100k+')) baseROI = 25000;
            if (revenue.includes('$500k+')) baseROI = 50000;
            
            // Add opportunity multipliers
            const automationOpportunity = automationScore * 3000;
            const contentOpportunity = (6 - contentScore) * 2000;
            
            const totalOpportunity = baseROI + automationOpportunity + contentOpportunity;
            
            return `Estimated Monthly Revenue Increase: $${totalOpportunity.toLocaleString()} within 6 months through AI automation, strategic content, and optimized ad channels.`;
        }

        function generateExecutiveSummary(data, automationScore, contentScore, channelScore, industryInsights) {
            const strengths = [];
            const gaps = [];
            
            if (channelScore >= 3) strengths.push('multi-channel marketing approach');
            if (contentScore >= 4) strengths.push('strong content foundation');
            if (automationScore === 0) strengths.push('efficient workflow management');
            
            if (automationScore >= 2) gaps.push('manual processes that could be automated');
            if (contentScore <= 2) gaps.push('content assets for lead generation');
            if (channelScore <= 2) gaps.push('untapped high-ROI advertising channels');
            
            const strengthText = strengths.length > 0 ? strengths.join(', ') : 'establishing a marketing foundation';
            const gapText = gaps.length > 0 ? gaps.join(', ') : 'advanced AI integration opportunities';
            
            return `
                <p><strong>${data.companyName}</strong> is doing well with <strong>${strengthText}</strong>.</p
